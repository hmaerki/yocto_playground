    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch AAA",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tmp/work/qemux86_64-poky-linux/core-image-minimal/1.0/rootfs/usr/bin/hellosandbox",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            // "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:2323",
            "miDebuggerPath": "${workspaceFolder}/build/tmp/work/x86_64-linux/gdb-cross-x86_64/14.2/build-x86_64-poky-linux/gdb/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/usr/src/debug/hellosandbox/1.0/": "${workspaceFolder}/sources/meta-sandbox/recipe-custom/files"
            }
        },
        {
            // DOES NOT WORK:
            // https://stackoverflow.com/questions/79704243/launch-json-set-up-for-vscode-debugging-on-qemu-within-docker-container
            "useExtendedRemote": true,
            "name": "Attach to QEMU (GDB Remote)",
            "type": "cppdbg",
            "request": "attach",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:2323",
            "miDebuggerPath": "${workspaceFolder}/build/tmp/work/x86_64-linux/gdb-cross-x86_64/14.2/build-x86_64-poky-linux/gdb/gdb",
            // "program": "/usr/bin/hellosandbox", // Host machine not container, the exe/out file path
            // "program": "${workspaceFolder}/build/tmp/work/qemux86_64-poky-linux/core-image-minimal/1.0/rootfs/usr/bin/hellosandbox", // Host machine not container, the exe/out file path
            // "cwd": "${workspaceFolder}/sources/meta-sandbox/recipe-custom/files/hellosandbox.c", // Host machine not container
        }
    ]
}